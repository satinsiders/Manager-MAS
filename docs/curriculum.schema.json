{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Study Plan",
  "type": "object",
  "required": ["version", "student_id", "curricula", "notes"],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "student_id": {
      "type": "string",
      "format": "uuid"
    },
    "notes": {
      "type": "string"
    },
    "curricula": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "minutes_recommended"],
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "minutes_recommended": { "type": "number", "minimum": 1 },
          "strategy": { "type": "string" },
          "units": {
            "type": "array",
            "minItems": 1,
            "uniqueItemProperties": ["id"],
            "items": {
              "type": "object",
              "required": ["id", "duration_minutes"],
              "properties": {
                "id": { "type": "string", "format": "uuid" },
                "duration_minutes": { "type": "number", "minimum": 1 }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
